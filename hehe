fi

# Key Verification
echo -e "\n\033[1;36m◇ CHECKING...(It Take Some Time Please Wait!)\033[1;37m 16983:16085\033[0m" ; rm $_Ink/list > /dev/null 2>&1; wget -P $_Ink https://raw.githubusercontent.com/hacktricks2023/VANTRICKS-VPS-MANAGER/main/Install/list > /dev/null 2>&1; verif_key
